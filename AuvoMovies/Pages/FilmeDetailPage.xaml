<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AuvoMovies.Pages.FilmeDetailPage"
             xmlns:models="clr-namespace:AuvoMovies.Models"
             x:DataType="models:Filme"
             Title="FilmeDetailPage">

    <ScrollView>
        <StackLayout Padding="10">
            <Image x:Name="PosterImage" Source="{Binding Filme.PosterPath}"/>
            <Label x:Name="TitleLabel" FontAttributes="Bold" FontSize="24" Text="{Binding Filme.Title}" />
            <Label x:Name="OverviewLabel" FontSize="14" TextColor="Gray" Text="{Binding Filme.Overview}"/>
            <Button Text="Adicionar como Favorito" Command="{Binding FavoritarCommand}"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
