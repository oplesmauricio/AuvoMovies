<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AuvoMovies"
             xmlns:converters="clr-namespace:AuvoMovies.Converters"
             x:Class="AuvoMovies.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <FileImageSource x:Key="MenuIcon">ic_menu_light.png</FileImageSource>

            <!-- CONVERTERS -->
            <converters:BooleanToFlowDirectionConverter x:Key="FlowDirectionConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
